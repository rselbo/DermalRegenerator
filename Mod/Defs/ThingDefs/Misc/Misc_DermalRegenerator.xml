<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>DermalRegenerator</defName>
    <label>dermal regenerator</label>
    <graphicData>
      <texPath>Things/Building/DermalRegenerator</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>3,3</drawSize>
    </graphicData>
    <thingClass>DermalRegenerator.Building_DermalRegeneratorNew</thingClass>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Standable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <statBases>
      <WorkToBuild>3200</WorkToBuild>
      <MaxHitPoints>250</MaxHitPoints>
      <Flammability>0.9</Flammability>
	  <BedRestEffectiveness>0.7</BedRestEffectiveness>
	  <Comfort>0.7</Comfort>
	  <ImmunityGainSpeedFactor>1.0</ImmunityGainSpeedFactor>
	  <MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
	  <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
    </statBases>
	<building>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay>9</bed_healPerDay>
      <bed_defaultMedical>true</bed_defaultMedical>
    </building>
    <tickerType>Normal</tickerType>
    <description>A medical device able to scan and repair surface tissue.</description>
    <size>(3,3)</size>
    <designationCategory>Misc</designationCategory>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,0)</interactionCellOffset>
    <rotatable>false</rotatable>
    <costList>
      <Steel>250</Steel>
      <Gold>10</Gold>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.66</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>600</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable" />
    </comps>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <researchPrerequisites>
      <li>DermalRegenerator</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>